<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="accessories-menu" label="Accessories">
  <item label="Archive Manager">
    <action name="Execute">
      <command>file-roller</command>
    </action>
  </item>
  <item label="Catfish">
    <action name="Execute">
      <command>catfish</command>
    </action>
  </item>
  <item label="Nomacs">
    <action name="Execute">
      <command>nomacs</command>
    </action>
  </item>
</menu>

<menu id="appearance-menu" label="Appearance">
  <item label="Look and Feel">
    <action name="Execute">
      <command>lxappearance</command>
    </action>
  </item>
  <item label="Openbox Configuration">
    <action name="Execute">
      <command>obconf</command>
    </action>
  </item>
</menu>

<menu id="editors-menu" label="Editors">
  <item label="Kate">
    <action name="Execute">
      <command>kate</command>
    </action>
  </item>
  <item label="Pinta">
    <action name="Execute">
      <command>pinta</command>
    </action>
  </item>
</menu>

<menu id="settings-menu" label="Settings">
  <item label="Dock Panel">
    <action name="Execute">
      <command>tint2conf</command>
    </action>
  </item>
  <item label="Network">
    <action name="Execute">
      <command>nm-connection-editor</command>
    </action>
  </item>
  <item label="Sound">
    <action name="Execute">
      <command>pavucontrol</command>
    </action>
  </item>
</menu>

<menu id="user-menu" label="User">
  <item label="Log out">
    <action name="Exit">
      <prompt>no</prompt>
    </action>
  </item>
</menu>

<menu id="power-menu" label="Power">
  <item label="Reboot">
    <action name="Execute">
      <command>reboot</command>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <command>shutdown now</command>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Basic" />
  <item label="Browser">
    <action name="Execute">
      <command>sh ~/.config/openbox/scripts/open_internet_browser.sh</command>
    </action>
  </item>
  <item label="File Manager">
    <action name="Execute">
      <command>sh ~/.config/openbox/scripts/open_file_manager.sh</command>
    </action>
  </item>
  <item label="Text Editor">
    <action name="Execute">
      <command>sh ~/.config/openbox/scripts/open_text_editor.sh</command>
    </action>
  </item>
  <item label="Terminal">
    <action name="Execute">
      <command>sh ~/.config/openbox/scripts/open_terminal.sh</command>
    </action>
  </item>
  <separator label="Applications" />
  <menu id="accessories-menu"/>
  <menu id="editors-menu"/>
  <separator label="System"/>
  <menu id="appearance-menu"/>
  <menu id="settings-menu"/>
  <menu id="user-menu"/>
  <menu id="power-menu"/>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Execute">
      <command>openbox --reconfigure</command>
      <command>setlayout 0 3 3 0"</command>
    </action>
  <separator />
</menu>

</openbox_menu>
