<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-accessories-menu" label="Accessories">
  <item label="Catfish">
    <action name="Execute">
      <command>catfish</command>
    </action>
  </item>
</menu>

<menu id="apps-editors-menu" label="Editors">
  <item label="Kate">
    <action name="Execute">
      <command>kate</command>
    </action>
  </item>
</menu>

<menu id="apps-term-menu" label="Terminals">
  <item label="Gnome Terminal">
    <action name="Execute">
      <command>gnome-terminal</command>
    </action>
  </item>
</menu>

<menu id="apps-net-menu" label="Internet">
  <item label="Chromium">
    <action name="Execute">
      <command>chromium</command>
    </action>
  </item>
</menu>

<menu id="apps-fileman-menu" label="File Managers">
  <item label="Thunar">
    <action name="Execute">
      <command>Thunar</command>
    </action>
  </item>
</menu>

<menu id="settings-menu" label="Settings">
  <item label="Dock Panel">
    <action name="Execute">
      <command>tint2conf</command>
    </action>
  </item>
  <item label="Sound">
    <action name="Execute">
      <command>pavucontrol</command>
    </action>
  </item>
</menu>

<menu id="user-menu" label="User">
  <item label="Log out">
    <action name="Exit">
      <prompt>no</prompt>
    </action>
  </item>
</menu>

<menu id="power-menu" label="Power">
  <item label="Reboot">
    <action name="Execute">
      <command>reboot</command>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <command>shutdown now</command>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <menu id="apps-accessories-menu"/>
  <menu id="apps-editors-menu"/>
  <menu id="apps-graphics-menu"/>
  <menu id="apps-net-menu"/>
  <menu id="apps-term-menu"/>
  <menu id="apps-fileman-menu"/>
  <separator label="System"/>
  <menu id="settings-menu"/>
  <menu id="user-menu"/>
  <menu id="power-menu"/>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Execute">
      <command>openbox --reconfigure</command>
      <command>setlayout 0 3 3 0"</command>
    </action>
  <separator />
</menu>

</openbox_menu>
