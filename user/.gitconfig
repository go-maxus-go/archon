[user]
    name = Maxim Sheshukov
    email = sheshukovmaxim@gmail.com
[alias]
    st = status
    stu = status -u
    br = branch
    rb = rebase
    lgf = log --graph --pretty=format:'%C(auto)%h%d %s %C(bold black)<%aN>%Creset'
    lgfa = lgf --all
    lg = lgf -n 35
    lga = lgfa -n 35
    cp = cherry-pick
    co = checkout
    ci = commit
    cia = commit -a
    cir = commit --amend
    cim = commit -m
    cif = commit --amend --no-edit
    ciam = commit -a -m
    ciaf = commit -a --amend --no-edit
    df = diff
    dfc = diff --cached
    dt = difftool
    mt = mergetool
[core]
    longpaths = true
    editor = nvim
